    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 5678,
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/labour_service/",
                    "remoteRoot": "/app/",
                }
            ],
            "justMyCode": false,
        },
        {
            "name": "Attach to Consumer",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 5679,
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend/",
                    "remoteRoot": "/app/",
                }
            ],
            "justMyCode": false,
        },
        {
            "name": "Debug Tests: Notification Service",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["notification_service/"],
            "justMyCode": false,
        }
    ]
}